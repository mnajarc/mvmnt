<%- model_class = FormaContacto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:clave_forma_contacto) %></th>
      <th><%= model_class.human_attribute_name(:forma_contacto) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @forma_contactos.each do |forma_contacto| %>
      <tr>
        <td><%= link_to forma_contacto.clave_forma_contacto, forma_contacto_path(forma_contacto) %></td>
        <td><%= forma_contacto.forma_contacto %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_forma_contacto_path(forma_contacto), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      forma_contacto_path(forma_contacto),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_forma_contacto_path,
            :class => 'btn btn-primary' %>
