<%- model_class = TipoProducto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:clave_tipo_producto) %></th>
      <th><%= model_class.human_attribute_name(:nombre_tipo_producto) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tipo_productos.each do |tipo_producto| %>
      <tr>
        <td><%= link_to tipo_producto.clave_tipo_producto, tipo_producto_path(tipo_producto) %></td>
        <td><%= tipo_producto.nombre_tipo_producto %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tipo_producto_path(tipo_producto), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tipo_producto_path(tipo_producto),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tipo_producto_path,
            :class => 'btn btn-primary' %>
