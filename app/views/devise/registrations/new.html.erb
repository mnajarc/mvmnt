<h2>Registro</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: "Correo electrónico" %>
    <%= f.input :password, required: true, label: "Contraseña", hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirma contraseña", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
