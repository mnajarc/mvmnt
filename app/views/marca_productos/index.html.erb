<%- model_class = MarcaProducto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:clave_marca) %></th>
      <th><%= model_class.human_attribute_name(:nombre_marca) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @marca_productos.each do |marca_producto| %>
      <tr>
        <td><%= link_to marca_producto.clave_marca, marca_producto_path(marca_producto) %></td>
        <td><%= marca_producto.nombre_marca%></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_marca_producto_path(marca_producto), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      marca_producto_path(marca_producto),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_marca_producto_path,
            :class => 'btn btn-primary' %>
