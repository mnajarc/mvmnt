<p id="notice"><%= notice %></p>

<h1>Listing Caracter Tipo Personas</h1>

<table>
  <thead>
    <tr>
      <th>Caracteristica</th>
      <th>Requerido</th>
      <th>Tipo dato</th>
      <th>Tipo persona</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caracter_tipo_personas.each do |caracter_tipo_persona| %>
      <tr>
        <td><%= caracter_tipo_persona.caracteristica %></td>
        <td><%= caracter_tipo_persona.requerido? ? 'S' : 'N'%></td>
        <td><%= caracter_tipo_persona.tipo_dato.tipo_dato %></td>
        <td><%= caracter_tipo_persona.tipo_persona.tipo_persona %></td>
        <td><%= link_to 'Show', caracter_tipo_persona %></td>
        <td><%= link_to 'Edit', edit_caracter_tipo_persona_path(caracter_tipo_persona) %></td>
        <td><%= link_to 'Destroy', caracter_tipo_persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

