<%- model_class = Estado -%>
<div class="page-header">
  <h1><%=t '.title', :default => @estado.nombre_estado %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:clave_localidad) %></th>
      <th><%= model_class.human_attribute_name(:nombre_localidad) %></th>
      
    </tr>
  </thead>
  <tbody>
    <% @estado.localidads.each do |localidad| %>
      <tr>
          
        <td><%= localidad.clave_localidad %></td>
        <td><%= localidad.nombre_localidad %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<p id="notice"><%= notice %></p>

       <%= link_to t('.back', :default => t("helpers.links.back")),
              nacion_path(@estado.nacion) , :class => 'btn btn-default'  %>
 
