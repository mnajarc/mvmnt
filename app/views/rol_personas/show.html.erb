<%- model_class = RolPersona -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:tipo_persona) %>:</strong></dt>
    <dd><%= @rol_persona.tipo_persona.tipo_persona %></dd>
    <dt><strong><%= model_class.human_attribute_name(:rol_persona) %>:</strong></dt>
    <dd><%= @rol_persona.rol_persona %></dd>
</dl>
<table>
  <thead>
    <tr>
      <th>Caracteristica</th>
      <th>Requerido</th>
      <th>Tipo dato</th>
    </tr>
  </thead>
  <tbody>
    <% @caracter_rol_personas.each do |caracter_rol_persona| %>
      <tr>
        <td><%= caracter_rol_persona.caracteristica %></td>
        <td><%= caracter_rol_persona.requerido? ? 'S' : 'N'%></td>
        <td><%= caracter_rol_persona.tipo_dato.tipo_dato %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= link_to t('.back', :default => t("helpers.links.back")),
              rol_personas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rol_persona_path(@rol_persona), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rol_persona_path(@rol_persona),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

