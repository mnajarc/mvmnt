<%- model_class = RolPersona -%>


<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= form_tag new_rol_persona_path, method: :get do %>
    <%= select_tag :tipo_persona_id, options_from_collection_for_select(TipoPersona.all, :id, :tipo_persona), :class => 'btn btn-text' %>
    
    <%= submit_tag "Nuevo Rol Persona", name: nil,:class => 'btn btn-primary'%>
<% end %>


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:clave_rol_persona) %></th>
      <th><%= model_class.human_attribute_name(:rol_persona) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rol_personas.each do |rol_persona| %>
      <tr>
        <td><%= link_to rol_persona.rol_persona, rol_persona_path(rol_persona) %></td>
        <td><%= rol_persona.rol_persona %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_rol_persona_path(rol_persona), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      rol_persona_path(rol_persona),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



