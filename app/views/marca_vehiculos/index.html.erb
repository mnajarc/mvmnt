<%- model_class = MarcaVehiculo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:clave_marca_vehiculo) %></th>
      <th><%= model_class.human_attribute_name(:marca_vehiculo) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @marca_vehiculos.each do |marca_vehiculo| %>
      <tr>
        <td><%= link_to marca_vehiculo.clave_marca_vehiculo, marca_vehiculo_path(marca_vehiculo) %></td>
        <td><%= marca_vehiculo.marca_vehiculo%></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_marca_vehiculo_path(marca_vehiculo), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      marca_vehiculo_path(marca_vehiculo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_marca_vehiculo_path,
            :class => 'btn btn-primary' %>
