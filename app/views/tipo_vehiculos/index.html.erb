<%- model_class = TipoVehiculo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:clave_tipo_vehiculo) %></th>
      <th><%= model_class.human_attribute_name(:tipo_vehiculo) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tipo_vehiculos.each do |tipo_vehiculo| %>
      <tr>
        <td><%= link_to tipo_vehiculo.clave_tipo_vehiculo, tipo_vehiculo_path(tipo_vehiculo) %></td>
        <td><%= tipo_vehiculo.tipo_vehiculo %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tipo_vehiculo_path(tipo_vehiculo), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tipo_vehiculo_path(tipo_vehiculo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tipo_vehiculo_path,
            :class => 'btn btn-primary' %>
