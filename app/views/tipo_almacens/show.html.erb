<%- model_class = TipoAlmacen -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:clave_tipo_almacen) %>:</strong></dt>
  <dd><%= @tipo_almacen.clave_tipo_almacen %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre_tipo_almacen) %>:</strong></dt>
  <dd><%= @tipo_almacen.nombre_tipo_almacen %></dd>
</dl>
<table>
  <thead>
    <tr>
      <th>Caracteristica</th>
      <th>Requerido</th>
      <th>Tipo dato</th>
    </tr>
  </thead>
  <tbody>
    <% @caracteristica_tipo_almacens.each do |caracteristica_tipo_almacen| %>
      <tr>
        <td><%= caracteristica_tipo_almacen.caracteristica %></td>
        <td><%= caracteristica_tipo_almacen.requerido? ? 'S' : 'N'%></td>
        <td><%= caracteristica_tipo_almacen.tipo_dato.tipo_dato %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= link_to t('.back', :default => t("helpers.links.back")),
              tipo_almacens_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tipo_almacen_path(@tipo_almacen), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tipo_almacen_path(@tipo_almacen),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>